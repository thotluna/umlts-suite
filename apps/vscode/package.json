{
  "name": "umlts-vscode",
  "publisher": "thot",
  "displayName": "UMLTS Language Support",
  "description": "Visual Studio Code extension for UMLTS DSL",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Visualization"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "umlts",
        "aliases": [
          "UMLTS",
          "umlts"
        ],
        "extensions": [
          ".umlts"
        ],
        "configuration": "./umlts-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "umlts.showPreview",
        "title": "UMLTS: Show Preview",
        "category": "UMLTS",
        "icon": "$(layout-sidebar-right)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "umlts.showPreview",
          "group": "navigation",
          "when": "resourceExtname == .umlts"
        }
      ],
      "editor/context": [
        {
          "command": "umlts.showPreview",
          "group": "navigation",
          "when": "resourceExtname == .umlts"
        }
      ]
    },
    "grammars": [
      {
        "language": "umlts",
        "scopeName": "source.umlts",
        "path": "./syntaxes/umlts.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@umlts/engine": "*",
    "@umlts/renderer": "*"
  }
}
