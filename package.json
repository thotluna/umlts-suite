{
  "name": "umlts-suite",
  "version": "1.0.0",
  "description": "UMLTS Suite - Monorepo for UMLTS Engine, Renderer and VSCode Extension",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "install:all": "npm install",
    "build:engine": "npm run build -w packages/engine",
    "build:renderer": "npm run build -w packages/renderer",
    "build:vscode": "npm run compile -w apps/vscode",
    "compile": "npm run build",
    "build": "npm run build:engine && npm run build:renderer && npm run build:vscode",
    "dev": "npm run watch -w apps/vscode"
  },
  "devDependencies": {
    "typescript": "^5.0.0"
  }
}
